{
  "name": "buefy",
  "version": "0.7.8",
  "homepage": "https://buefy.org",
  "description": "Lightweight UI components for Vue.js based on Bulma",
  "author": "Rafael Beraldo <rafael.pimpa@gmail.com>",
  "maintainers": [
    "Walter Tommasi <tommsi20@gmail.com>"
  ],
  "license": "MIT",
  "main": "dist/buefy.cjs.js",
  "unpkg": "dist/buefy.min.js",
  "module": "dist/es/buefy.js",
  "typings": "types/index.d.ts",
  "files": [
    "dist",
    "src",
    "types/*.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/buefy/buefy.git"
  },
  "bugs": {
    "url": "https://github.com/buefy/buefy/issues"
  },
  "scripts": {
    "lint": "eslint --ext .js,.vue src",
    "lint:fix": "eslint --ext .js,.vue src --fix",
    "lint:staged": "lint-staged",
    "unit": "jest",
    "test": "npm run lint && npm run unit",
    "test:watch": "npm run unit -- --watchAll",
    "build:watch": "concurrently \"npm run build:lib:watch\" \"npm run build:scss:watch \" ",
    "build:lib": "rollup -c && rollup -c --compact",
    "build:lib:watch": "rollup -c --watch",
    "build:scss": "node-sass --output-style expanded src/scss/buefy-build.scss | node ./build/banner.js > dist/buefy.css && cleancss --level 1 --format breaksWith=lf --output dist/buefy.min.css dist/buefy.css",
    "build:scss:watch": "node-sass src/scss/buefy-build.scss --w",
    "build": "npm run build:lib && npm run build:scss",
    "cov": "./node_modules/codcov/bin/codcov"
  },
  "keywords": [
    "bulma",
    "vue",
    "vuejs",
    "vue-bulma",
    "components"
  ],
  "dependencies": {
    "bulma": "0.7.5"
  },
  "peerDependencies": {
    "vue": "^2.5.13"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.3.4",
    "@vue/test-utils": "^1.0.0-beta.25",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.3.1",
    "clean-css-cli": "^4.3.0",
    "concurrently": "^4.1.0",
    "eslint": "^5.15.1",
    "eslint-config-buefy": "0.0.1",
    "jest": "^24.8.0",
    "jest-serializer-vue": "^2.0.2",
    "lint-staged": "^8.1.5",
    "node-sass": "4.12.0",
    "rollup": "^1.6.0",
    "rollup-copy-plugin": "^0.1.0",
    "rollup-plugin-babel": "4.3.2",
    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-terser": "^4.0.4",
    "rollup-plugin-vue": "^4.7.2",
    "vue": "2.5.13",
    "vue-jest": "^3.0.4",
    "vue-template-compiler": "2.5.13"
  },
  "lint-staged": {
    "*.{vue,js}": [
      "lint --fix",
      "git add"
    ]
  },
  "pre-commit": "lint:staged",
  "engines": {
    "node": ">= 4.0.0",
    "npm": ">= 3.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
